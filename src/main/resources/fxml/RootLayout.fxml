<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group.commditiesAnalysis.view.RootLayoutController">
   <left>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox />
            <Region prefHeight="100.0" prefWidth="173.0" />
            <RadioButton mnemonicParsing="false" text="Tags statistic" />
            <RadioButton mnemonicParsing="false" text="Tags weight and grade" />
         </children>
         <BorderPane.margin>
            <Insets left="8.0" right="8.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="3.0" right="3.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem mnemonicParsing="false" text="Set scrapping result path" />
